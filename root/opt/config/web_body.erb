<h4><%= episode[:series_name] %></h4>
		
<h5 class="bold">
<%= episode[:episode_number] %> - <%= episode[:title] %>
</h5>
              
<span class="limittext"><%= episode[:synopsis] %></span><br>
  <span><a href="<%= episode[:imdb] %>"><img src="img/imdb.png"></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <button type="button" class="video-btn" data-toggle="modal" data-src="https://www.youtube.com/embed/<%= episode[:trailer] %>" data-target="#myModal">
  <img src="img/youtube.png"></button>
  </span>
             
    </div>
    
      </div>

</div> 
<% end %>
</div>
<% end %>

</div> 

</section>





<% if new_episodes != [] %>

<div class="container wow fadeInUp">
      
  <div class="row row-center">
        
    <div class="col-md-12">
    
<!-- header of New TV Show section -->
<h5 class="section-title">

<%= I18n.t :new_episodes%>

</h5>
          

<!--==========================
  Statistics Section
============================-->
<section id="stats" class="stats">
<!-- Start Statistics -->
<% if stats_web == "yes" %>

  
<div class="container wow fadeInUp">
      
  <div class="row row-center">
  
	<div class="col-md-12">
    
<!-- header of Statistics section -->
<br>
<h5 class="section-title"><%= stat_title if defined?(stat_title) %></h5>
          
<div class="section-title-divider"></div>

<!--  table layout start -->
<% if stats_layout == "table" %>

<table class="stats" style="border-collapse:collapse;border-spacing:0;border-style:none;width:60%;table-layout:fixed;" cellpadding="5px" width="60%" align="center">
							  <% unless t.pop_movie.nil? %>
							    <tr>
								  <td class="tg-yw4l"  align="right"><b>Most watched movie:</b></td>
								  <td class="tg-yw3l">&nbsp;</td>
								  <td class="tg-yw4la"><%= t.pop_movie if defined?(t.pop_movie) %></td>
							    </tr>
							  <%end %>
							  <% unless t.pop_tv.nil? %>
							    <tr>
								  <td class="tg-yw51" align="right"><b>Most watched TV show:</b></td>
								  <td class="tg-yw3l">&nbsp;</td>
								  <td class="tg-yw51a"><%= t.pop_tv if defined?(t.pop_tv) %></td>
							    </tr>
							  <% end %>
							  <% unless t.pop_artist.nil? %>
							    <tr>
								  <td class="tg-yw4l" align="right"><b>Most listened to artist:</b></td>
								  <td class="tg-yw3l">&nbsp;</td>
								  <td class="tg-yw4la"><%= t.pop_artist if defined?(t.pop_artist) %></td>
							    </tr>
							  <% end %>
							  <% unless t.movie_day_name.nil? %>
							    <tr>
								  <td class="tg-yw51" align="right"><b>Most popular day to watch movies:</b></td>
								  <td class="tg-yw3l">&nbsp;</td>
								  <td class="tg-yw51a"><%= t.movie_day_name if defined?(t.movie_day_name) %></td>
						        </tr>
							  <% end %>
							  <% unless t.friendly_movie_time.nil? %>
							    <tr>
								  <td class="tg-yw4l" align="right"><b>Most popular time to watch movies:</b></td>
								  <td class="tg-yw3l">&nbsp;</td>
							      <td class="tg-yw41a" ><%= t.friendly_movie_time if defined?(t.friendly_movie_time ) %></td>
							    </tr>
							  <% end %>
							  <% unless t.tv_day_name.nil? %>
							  <tr>
								<td class="tg-yw5l" align="right"><b>Most popular day to watch TV:</b></td>
								<td class="tg-yw3l">&nbsp;</td>
								<td class="tg-yw51a"><%= t.tv_day_name if defined?(t.tv_day_name) %></td>
							  </tr>
							  <% end %>
							  <% unless t.friendly_tv_time.nil? %>
							    <tr>
								  <td class="tg-yw4l" align="right"><b>Most popular time to watch TV:</b></td>
								  <td class="tg-yw3l">&nbsp;</td>
								  <td class="tg-yw41a"><%= t.friendly_tv_time if defined?(t.friendly_tv_time) %></td>
							    </tr>
							  <% end %>
							  <% unless t.friendly_top_user.nil? %>
							    <tr>
								  <td class="tg-yw5l" align="right"><b>Top user watched:</b></td>
								  <td class="tg-yw3l">&nbsp;</td>
								  <td class="tg-yw51a"><%= t.friendly_top_user if defined?(t.friendly_top_user) %></td>
							    </tr>
							  <% end %>
							  <% unless t.streams.nil? %>
							    <tr>
								  <td class="tg-yw4l" align="right"><b>Most concurrent streams:</b></td>
								  <td class="tg-yw3l">&nbsp;</td>
								  <td class="tg-yw41a"><%= t.streams if defined?(t.streams) %></td>
							    </tr>
							  <% end %>
							  <% unless tvcount.nil? %>
							    <tr>
								  <td class="tg-yw51b" colspan="3">
								  <center><b>
								  <% if moviecount != 0 %>
								    New Movies:&nbsp; <font color="#e5a00d"><%= moviecount if defined?(moviecount) %></font>
								  <% end %>
								  <% if tvcount != 0 %>
								    <% if moviecount != 0 %>
								      &nbsp; | &nbsp;
									<% end %>
									New Episodes:&nbsp; <font color="#e5a00d"><%= tvcount if defined?(tvcount) %></font>
								  <% end %>
								  <% if seasoncount != 0 %>
								    <% if tvcount != 0 or moviecount != 0 %>
								      &nbsp; | &nbsp;
									<% end %>
									New Seasons:&nbsp; <font color="#e5a00d"><%= seasoncount if defined?(seasoncount) %></font>
								  <% end %>
								  </b></center></td>
							    </tr>
							  <% end %>
							  <% unless t.movie_count_sum.nil? %>
							    <tr>
								  <td class="tg-yw51b" colspan="3"><center><b>Total Movies:&nbsp; <font color="#e5a00d"><%= t.movie_count_sum if defined?(t.movie_count_sum) %></font>&nbsp; |&nbsp; Total TV Shows:&nbsp; <font color="#e5a00d"><%= t.tv_count_sum if defined?(t.tv_count_sum) %></font> 
								  <% unless t.music_count_sum.nil? %>
								  &nbsp; |&nbsp; Total Songs:&nbsp; <font color="#e5a00d"><%= t.music_count_sum if defined?(t.music_count_sum) %></font>
								  <% end %>
							    </b></center></td></tr>
							  <% end %>	    
						</table>

<!--  table layout end -->
<% end %>

<!--  Grid layout start -->
<% if stats_layout == "grid" %>
							  <% unless t.pop_movie.nil? %>
							  <div class="col-md-3 col-center" align="center">
								<b>Most watched movie:</b><br>
								 <%= t.pop_movie if defined?(t.pop_movie) %></p>
							  </div>
							  <%end %>
							  <% unless t.pop_tv.nil? %>
							    <div class="col-md-3 col-center" align="center">
								  <b>Most watched TV show:</b><br>
								  <%= t.pop_tv if defined?(t.pop_tv) %></p>
								 </div>
							  <% end %>
							  <% unless t.pop_artist.nil? %>
							    <div class="col-md-3 col-center" align="center">
								  <b>Most listened to artist:</b><br>
								  <%= t.pop_artist if defined?(t.pop_artist) %></p>
							    </div>
							  <% end %>
							  <% unless t.movie_day_name.nil? %>
							    <div class="col-md-3 col-center" align="center">
								  <b>Most popular day to watch movies:</b><br>
								  <%= t.movie_day_name if defined?(t.movie_day_name) %></p>
						        </div>
							  <% end %>
							  <% unless t.friendly_movie_time.nil? %>
							    <div class="col-md-3 col-center" align="center">
								  <b>Most popular time to watch movies:</b><br>
							      <%= t.friendly_movie_time if defined?(t.friendly_movie_time ) %></p>
							    </div>
							  <% end %>
							  <% unless t.tv_day_name.nil? %>
							  <div class="col-md-3 col-center" align="center">
								<b>Most popular day to watch TV:</b><br>
								<%= t.tv_day_name if defined?(t.tv_day_name) %></p>
							  </div>
							  <% end %>
							  <% unless t.friendly_tv_time.nil? %>
							    <div class="col-md-3 col-center" align="center">
								  <b>Most popular time to watch TV:</b><br>
								  <%= t.friendly_tv_time if defined?(t.friendly_tv_time) %></p>
							    </div>
							  <% end %>
							  <% unless t.friendly_top_user.nil? %>
							    <div class="col-md-3 col-center" align="center">
								  <b>Top user watched:</b><br>
								  <%= t.friendly_top_user if defined?(t.friendly_top_user) %></p>
							    </div>
							  <% end %>
							  <% unless t.streams.nil? %>
							    <div class="col-md-3 col-center" align="center">
								  <b>Most concurrent streams:</b><br>
								  <%= t.streams if defined?(t.streams) %></p>
							    </div>
							  <% end %>
							  <% unless tvcount.nil? %>
							    </p><div class="col-md-12" align="center">
								<center><b>
								<% if moviecount != 0 %>
								  New Movies:&nbsp; <font color="#e5a00d"><%= moviecount if defined?(moviecount) %></font>
								<% end %>
								<% if tvcount != 0 %>
								  <% if moviecount != 0 %>
								    &nbsp; | &nbsp;
								  <% end %>
								  New Episodes:&nbsp; <font color="#e5a00d"><%= tvcount if defined?(tvcount) %></font>
								<% end %>
								<% if seasoncount != 0 %>
								  <% if tvcount != 0 or moviecount != 0 %>
								    &nbsp; | &nbsp;
								  <% end %>
								  New Seasons:&nbsp; <font color="#e5a00d"><%= seasoncount if defined?(seasoncount) %></font>
								<% end %>
								  </b></center></p>
								  </div>
							  <% end %>
							  <% unless t.movie_count_sum.nil? %>
							    </p><div class="col-md-12" align="center">
								<center>
								<b>Total Movies:&nbsp; <font color="#e5a00d"><%= t.movie_count_sum if defined?(t.movie_count_sum) %></font>&nbsp; |&nbsp; Total TV Shows: &nbsp; <font color="#e5a00d"><%= t.tv_count_sum if defined?(t.tv_count_sum) %></font> 
								  <% unless t.music_count_sum.nil? %>
								  &nbsp; |&nbsp; Total Songs:&nbsp; <font color="#e5a00d"><%= t.music_count_sum if defined?(t.music_count_sum) %></font>
								  </b></center></p>
								  </div>
								  <% end %>
							  <% end %>


<% end %>
<!--  Grid layout end -->

<!-- Place text below between P tag for text under section header -->           
<p class="section-description"></p>
      
  </div>
 
<% end %>

</div>

</div>

</section>

<!--==========================
  Movie Section
============================-->
 <section id="movies" class="movies">
<!-- start of new movies -->
<% if movies != [] %>

  
<div class="container wow fadeInUp">
      
  <div class="row row-center">
        
    <div class="col-md-12">
    
<!-- header of New Movies section -->
<br>
<h5 class="section-title"><%= I18n.t :new_movies %></h5>
          
<div class="section-title-divider"></div>

<!-- Place text below between P tag for text under section header -->           
<p class="section-description">  </p>
        
     </div>
      
  </div>
     
<div class="row row-center">

<!-- start loop here -->

<% movies.each do |movie| %> 

  <div class="col-md-3 col-center">
      <div class="portfolio-item" style="background-image: url(<%= movie[:image] %>);">
    
    <div class="details">
              <h4><%= movie[:title] %> (<%= movie[:date] %>)</h4>
		      <h5 class="bold"><%= movie[:tagline] %></h5>
              <span class="limittext"><%= movie[:synopsis] %></span><br>
			  <span><a href="<%= movie[:imdb] %>"><img src="img/imdb.png"></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			  <button type="submit" class="video-btn" data-toggle="modal" data-src="https://www.youtube.com/embed/<%= movie[:trailer] %>" data-target="#myModal">
			  <img src="img/youtube.png"></button>
			  </span>
              
    </div>
    
      </div>
</div> 
<% end %>
</div>
<% end %>

</div> 

</section>

